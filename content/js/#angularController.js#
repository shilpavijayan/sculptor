apiModule.function ProductPlatformsCtrl($http, $scope) {
    $http.get('/api/platforms').success(function(data, status, headers, config) {
	if (data.error) {
	    $scope.error = data.error;
	} else {
	    $scope.platforms = data.platforms;
	}
    }).error(function(data, status, headers, config) {
	$scope.error = "Error fetching product platforms.";
    });
}
